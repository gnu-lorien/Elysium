
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <mapping package="com.dstevens"/>
    <mapping class="com.dstevens.persistence.auditing.AuditEvent"/>
    
    <mapping class="com.dstevens.players.Troupe"/>
    <mapping class="com.dstevens.players.Player"/>
    <mapping class="com.dstevens.characters.PlayerCharacter"/>
    <mapping class="com.dstevens.characters.traits.SetTrait"/>
    <mapping class="com.dstevens.characters.traits.RemoveTrait"/>
    <mapping class="com.dstevens.characters.traits.attributes.AttributeValue"/>
    <mapping class="com.dstevens.characters.traits.Experience"/>
    
    <mapping class="com.dstevens.characters.traits.backgrounds.CharacterBackground"/>
    <mapping class="com.dstevens.characters.traits.skills.CharacterSkill"/>
    <mapping class="com.dstevens.characters.traits.powers.CharacterDiscipline"/>
    <mapping class="com.dstevens.characters.traits.powers.CharacterThaumaturgy"/>
    <mapping class="com.dstevens.characters.traits.powers.CharacterNecromancy"/>
    <mapping class="com.dstevens.characters.traits.distinctions.CharacterFlaw"/>
    <mapping class="com.dstevens.characters.traits.distinctions.CharacterMerit"/>
    <mapping class="com.dstevens.characters.traits.attributes.SetPhysicalFocus"/>
    <mapping class="com.dstevens.characters.traits.attributes.SetAttributeValue"/>
    
  </session-factory>
</hibernate-configuration>